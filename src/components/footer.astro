---
const year = new Date().getFullYear();
const email = "edantoniojuarez@gmail.com";

const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + '/';
---
<footer class="site-footer">
  <p>&copy; {year} Eduardo Antonio. All rights reserved.</p>

  <p class="footer-links">
    <a href=`${base}about`>About</a> - 
    <a href=`${base}contact`>Contact</a> - 
    <a href=`${base}`>Projects</a>
  </p>

  <div class="footer-actions">
    <button onclick="window.scrollTo({ top: 0, behavior: 'smooth' })" class="footer-btn">
      Back to Top
    </button>
    <a href={`mailto:${email}`} class="footer-btn" style="color: #e2e8f0">Email Me</a>
  </div>
</footer>

<style>
.site-footer {
  margin-top: 4rem;
  padding: 1.5rem 2rem;
  background-color: #0f172a;
  color: #e2e8f0;
  text-align: center;
  font-size: 0.9rem;
  border-top: 1px solid #1e293b;
  padding-bottom: 3rem;
}

.footer-links {
  margin: 0.5rem 0;
}

.site-footer a {
  color: #94a3b8;
  text-decoration: none;
  margin: 0 0.25rem;
  transition: color 0.2s ease;
}

.site-footer a:hover {
  color: #f8fafc;
}

.footer-actions {
  margin-top: 0.5rem;
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.footer-btn {
  background: none;
  border: 1px solid #334155;
  color: #e2e8f0;
  padding: 0.4rem 0.8rem;
  font-size: 0.85rem;
  cursor: pointer;
  border-radius: 4px;
  transition: background-color 0.2s ease, color 0.2s ease;
  text-decoration: none;
  font-family: "Jura", sans-serif;
}

.footer-btn:hover {
  background-color: #1e293b;
  color: #f8fafc;
}
</style>
