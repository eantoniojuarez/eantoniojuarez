<style>
@import url('https://fonts.googleapis.com/css2?family=Jura&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@100..900&display=swap');

 .nav-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 2vh 2vw;
  box-sizing: border-box;
  gap: 2vh;
  font-family: Inter, Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.nav-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
}

.nav-title-link,
.nav-caption-link {
  text-decoration: none;
  color: inherit;
  display: block;
  width: 100%;

}

.nav-title {
  font-size: clamp(1.2rem, 2rem, 2vw);
  margin: 0.5rem 0;
  color: white;
  font-family: "Raleway", sans-serif;
  font-weight: 700;
}

.nav-caption {
  font-size: clamp(0.8rem, 1.5rem, 1.7vw);
  margin: 0.2rem 0;
  font-weight: 400;
  color: white;
  opacity: 0.8;
  transition: opacity 0.2s ease;
}

.nav-caption-link:hover .nav-caption {
  opacity: 1;
  color: var(--accent, #94a3b8);
}

.nav-title-link:hover .nav-title {
  color: var(--accent, #38bdf8);
}
  @media (max-width: 768px) {
    .nav-title {
  font-size: clamp(.5rem, 3vw, 1rem);
 }
 .nav-caption {
  font-size: clamp(0.2rem, 3vw, .75rem);
}
  }

</style>